@{
    ViewData["Title"] = "Delete Exhibition";
}

@model ArtGallery.Models.ExhibitionView

<div class="container">
    <h2>Delete Exhibition</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>@Model.ExhibitionName</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Venue</dt>
            <dd class="col-sm-10">@Model.Venue</dd>
            <dt class="col-sm-2">Start Date</dt>
            <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>
            <dt class="col-sm-2">End Date</dt>
            <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="ExhibitionId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Admin")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>