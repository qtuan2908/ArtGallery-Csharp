
@{
    ViewData["Title"] = "Exhibition Detail";
    Layout = "_UserLayout";
}

@model ArtGallery.Models.ExhibitionView

<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Exhibition Detail</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Exhibition Detail</li>
    </ol>
</div>

<div class="container my-5">
    <h1 class="display-4">@Model.ExhibitionName</h1>
    <p><strong>Venue:</strong> @Model.Venue</p>
    <p><strong>Start Date:</strong> @Model.StartDate.ToString("g")</p>
    <p><strong>End Date:</strong> @Model.EndDate.ToString("g")</p>
    <p>@Model.Description</p>
    <div class="image-container">
        <img src="@Model.ImageUrl" class="img-fluid image-custom" alt="@Model.ExhibitionName">
    </div>
</div>

<div class="container banner-container">
    <h2 class="banner-title">Artworks in the Exhibition</h2>
    <div class="owl-carousel owl-theme">
        @foreach (var image in Model.ArtworkImages)
        {
            <div><img src="@image" alt=""></div>
        }
    </div>
</div>


<style>
    .owl-carousel .item img {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .image-custom {
        max-width: 100%;
        height: 300px; 
    }

    .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }
    .banner-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        text-align: center;
    }

    .banner-title {
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .owl-carousel .item {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 400px;
    }

        .owl-carousel .item img {
            max-height: 100%;
            max-width: 100%;
            object-fit: contain;
        }
</style>
