@{
    ViewData["Title"] = "Delete Auction";
}

@model ArtGallery.Models.AuctionView

<div class="container">
    <h2>Delete Auction</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>@Model.ArtworkTitle</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Start Price</dt>
            <dd class="col-sm-10">@Model.StartingPrice.ToString("C")</dd>
            <dt class="col-sm-2">Start Date</dt>
            <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>
            <dt class="col-sm-2">End Date</dt>
            <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>
            <img src="@Model.ImageURL" class="img-fluid pl-3" alt="@Model.ArtworkTitle">
            
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="AuctionId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Admin")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>