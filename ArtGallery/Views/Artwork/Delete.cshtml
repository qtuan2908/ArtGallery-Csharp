@model ArtGallery.Models.ArtworkView

@{
    ViewData["Title"] = "Delete Artwork";
}

<h2>Delete Artwork</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10"><img src="@Model.ImageURL" alt="@Model.Title" class="img-fluid" /></dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price?.ToString("C")</dd>
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreateAt</dd>
        <dt class="col-sm-2">Updated At</dt>
        <dd class="col-sm-10">@Model.UpdateAt</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ArtworkId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a href="@Url.Action("Admin")" class="btn btn-secondary">Back to List</a>
</form>