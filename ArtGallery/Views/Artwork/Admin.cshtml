@model IEnumerable<ArtGallery.Models.ArtworkView>

@{
    ViewData["Title"] = "Artworks management";
    Layout = "_Layout";
}

<h2>Artworks</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-custom-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Artwork Title</th>
            <th>Artist Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Status</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.ArtistName</td>
                <td>@item.Description</td>
                <td>@item.Category</td>
                <td>@item.Status</td>
                <td>@item.Price?.ToString("C")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ArtworkId })" class="btn btn-warning mb-2">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.ArtworkId })" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>