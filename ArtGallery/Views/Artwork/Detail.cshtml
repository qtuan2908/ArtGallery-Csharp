
@{
    ViewData["title"] = "Artwork Detail";
    Layout = "_UserLayout";

}
@model ArtGallery.Models.ArtworkView

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Artwork Detail</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Artwork Detail</li>
    </ol>
</div>
<!-- Single Page Header End -->
<h2>@Model.Title</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">Artist</dt>
    <dd class="col-sm-10">@Model.ArtistName</dd>
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Image</dt>
    <dd class="col-sm-10"><img src="@Model.ImageURL" alt="@Model.Title" class="img-fluid carousel-image" /></dd>
    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category</dd>
    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
    @if (Model.Category == Category.ForSale)
    {
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price?.ToString("C")</dd>
        <dt class="col-sm-2"></dt>
        @if(Model.Status == Status.Available)
        {
        <dd class="col-sm-10">
            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                <input type="hidden" name="artworkId" value="@Model.ArtworkId" />
                <button type="submit" class="btn btn-primary mt-2 w-auto">Add to Cart</button>
            </form>
        </dd>  
        }
    }
</dl>
