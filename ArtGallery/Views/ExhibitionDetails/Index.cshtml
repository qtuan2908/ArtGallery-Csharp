@model IEnumerable<ArtGallery.Models.ExhibitionDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Exhibition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtWork)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Exhibition.ExhibitionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtWork.ArtworkId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExhibitionDetailId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ExhibitionDetailId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ExhibitionDetailId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
